                                <from>0.1</from>
                                <to>1</to>
                            </random>
                        </w>
                        <c1>
                            <getArray name="starColors">
                                <index>
                                    <random>
                                        <from>0</from>
                                        <to>3</to>
                                    </random>
                                </index>
                            </getArray>
                        </c1>
