                            <node>
                                <endTime>90</endTime>
                                <move dx="600" dy="0" timeUse="90">moveTo</move>
                            </node>
                            <node>
                                <endTime>0</endTime>
                                <move></move>
                            </node>
                        </moveChain>
                    </star>
                </loopContent>
            </loop>
